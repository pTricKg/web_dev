//getting length of string and pulling substring from it
var str = "Hello, I'm a string!";

// printing length and substring
console.log(str.length);
console.log(str.substring(0,5));

//strings as objects
// create your strings and print their lengths!
var str1 = "I am a string literal.";
var str2 = new String("This is a string class.");
var str3 = new String("I'm using string constructor.");

console.log(str1.length);
console.log(str2.length);
console.log(str3.length);

//finding and replacing strings
var str = "I'm one cool string.";

// your code here!
str.indexOf("cool");//finding str within str

var unCoolStr = str.replace("cool", "boring");//replacing str by str

console.log(unCoolStr);

//extending String class
var str1 = "It was the best of times";
var str2 = "It was the worst of times";

// extend String's prototype here
String.prototype.futureDickens = function() {
    this.String = this.indexOf("was");
    this.String = this.replace("was","will be");
    return this.String;
    
};

console.log( str1.futureDickens() );
console.log( str2.futureDickens() );



